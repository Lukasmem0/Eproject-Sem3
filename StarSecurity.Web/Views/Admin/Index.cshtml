@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-gear-fill me-2"></i>Admin Panel</h2>
                <span class="badge bg-primary">Administrator Access</span>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.EmployeeCount</h4>
                            <p class="card-text">Total Employees</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-people-fill display-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.VacancyCount</h4>
                            <p class="card-text">Open Vacancies</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-briefcase-fill display-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.ClientCount</h4>
                            <p class="card-text">Active Clients</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-building-fill display-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.ServiceCount</h4>
                            <p class="card-text">Services Offered</p>
                        </div>
                        <div class="align-self-center">
                            <i class="bi bi-shield-check display-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Options -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Employee Management</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Manage employee records, add new employees, update information, and handle employee data.</p>
                    <div class="d-grid gap-2">
                        <a asp-action="Employees" class="btn btn-primary">
                            <i class="bi bi-list me-2"></i>View All Employees
                        </a>
                        <a asp-action="CreateEmployee" class="btn btn-outline-primary">
                            <i class="bi bi-plus-circle me-2"></i>Add New Employee
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-briefcase me-2"></i>Vacancy Management</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Post new job vacancies, manage existing openings, and track recruitment status.</p>
                    <div class="d-grid gap-2">
                        <a asp-action="Vacancies" class="btn btn-success">
                            <i class="bi bi-list me-2"></i>View All Vacancies
                        </a>
                        <a asp-action="CreateVacancy" class="btn btn-outline-success">
                            <i class="bi bi-plus-circle me-2"></i>Post New Vacancy
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-building me-2"></i>Client Management</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Manage client information, service assignments, and maintain client relationships.</p>
                    <div class="d-grid gap-2">
                        <a asp-action="Clients" class="btn btn-info">
                            <i class="bi bi-list me-2"></i>View All Clients
                        </a>
                        <a asp-action="CreateClient" class="btn btn-outline-info">
                            <i class="bi bi-plus-circle me-2"></i>Add New Client
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>Service Management</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Manage service offerings, update service descriptions, and maintain service portfolio.</p>
                    <div class="d-grid gap-2">
                        <a asp-action="Services" class="btn btn-warning">
                            <i class="bi bi-list me-2"></i>View All Services
                        </a>
                        <a asp-action="CreateService" class="btn btn-outline-warning">
                            <i class="bi bi-plus-circle me-2"></i>Add New Service
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>