@model IEnumerable<StarSecurity.Web.Models.Employee>
@{
    ViewData["Title"] = "Employee Directory";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people-fill me-2"></i>Employee Directory</h2>
        <span class="badge bg-info">@Model.Count() Employees</span>
    </div>

    <div class="row">
        @foreach (var employee in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <i class="bi bi-person-circle display-4 text-primary"></i>
                            <h5 class="card-title mt-2">@employee.Name</h5>
                            <p class="text-muted">@employee.Role</p>
                        </div>
                        
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between px-0">
                                <small class="text-muted">Employee Code:</small>
                                <span class="badge bg-secondary">@employee.EmployeeCode</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between px-0">
                                <small class="text-muted">Department:</small>
                                <small>@employee.Department</small>
                            </div>
                            <div class="list-group-item d-flex justify-content-between px-0">
                                <small class="text-muted">Grade:</small>
                                <span class="badge bg-info">@employee.Grade</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between px-0">
                                <small class="text-muted">Client:</small>
                                <small>@employee.Client</small>
                            </div>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="list-group-item d-flex justify-content-between px-0">
                                    <small class="text-muted">Contact:</small>
                                    <small>@employee.Contact</small>
                                </div>
                                <div class="list-group-item d-flex justify-content-between px-0">
                                    <small class="text-muted">Email:</small>
                                    <small>@employee.Email</small>
                                </div>
                            }
                        </div>
                        
                        @if (!string.IsNullOrEmpty(employee.Achievements))
                        {
                            <div class="mt-3">
                                <small class="text-muted">Achievements:</small>
                                <p class="small">@employee.Achievements</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>